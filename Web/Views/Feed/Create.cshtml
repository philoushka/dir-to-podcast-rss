@model DIYPodcastRss.Core.Model.UserFeed

@{
    ViewBag.Title = "Create A New Adhoc Podcast Feed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Feed", "Create", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="jumbotron">
        <h1>DIY Podcast RSS Feed</h1>
        <p class="lead">Make an RSS Feed From A Bunch Of Audio Files.</p>

    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Getting started</h2>
            <p>
                <ol>
                    <li>Where Are Your Audio Files? Paste the location of your collection of files. This could be a public Dropbox folder, OneDrive folder, Google Driver folder, or any public, open, and readable directory on any web server on the internet.</li>
                    <li>We'll generate an RSS Feed there. The order will be <em>alphabetical</em>, so be sure they're numbered and named properly.</li>
                    <li>You can then copy your unique RSS and paste into your podcast client.</li>
                    <li>We save and host this feed here for you. You can take the RSS content and host it elsewhere if you like.</li>
                    <li>This is a one-time parse. If the directory contents change or become unavailable, then you must come back and recreate an RSS feed.</li>
                </ol>
            </p>
            <p>
                <textarea id="Files" name="Files" placeholder="Paste each audio file on a new line, in the order you want to listen to them in.">
                    @foreach (var file in Model.Files)
                    {
                        @(file + Environment.NewLine)
                    }
                </textarea>
                <input type="url" id="ImgUrl" name="ImgUrl" placeholder="Do you have an image for this feed?" />
                <div id="imgPreview"></div>

                <input type="text" name="FeedName" id="FeedName" placeholder="Got a name for this feed? If blank, we'll use your local date/time." />

            </p>
            <p><button class="btn btn-primary">Build My Feed</button></p>
        </div>
        <div class="col-md-6" style="visibility:hidden;">
            <h2>Your Feed Is At</h2>
            <a id="newFeedUrl" />

            <h3>Email or Text/SMS It To Me</h3>
            <input type="text" id="sendItTo" placeholder="your email or SMS number" />
            <a class="btn btn-primary" href="">Send It To Me</a>
            <a class="btn btn-default" href="">Copy To Clipboard</a>
        </div>
    </div>
}

