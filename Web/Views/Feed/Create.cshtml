@model DIYPodcastRss.Core.Model.UserFeed

@{
    ViewBag.Title = "Create A New Adhoc Podcast Feed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h2>DIY Podcast RSS Feed</h2>
    <p class="lead">Make an RSS Feed Of A Bunch Of Audio Files.</p>

</div>

<div class="row">
    <div class="col-md-6">
        <h3>Getting started</h3>
        <p>
            Make as many RSS feeds as you like.
            <ol>
                <li>Paste the locations of your audio files. This must be a publicly accessible location: Dropbox, OneDrive, Google Drive, etc., or any public, open, and readable spot on the web.</li>
                <li>We'll generate and host an RSS feed here. The order will be <em>just as you specify</em>. Order them as you like.</li>
                <li>You can then copy your unique RSS URL and paste into your podcast client.</li>
                <li>We save and host this feed here for you.</li>
                <li>When you're finished with a feed, you can delete it or leave it.</li>
            </ol>
        </p>
        @using (Html.BeginForm("Feed", "Create", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" id="UserBrowserDateTime" name="UserBrowserDateTime" />
            <fieldset>
                <div class="form-group">
                    <label for="Files" class="col-lg-2 control-label">Audio Files</label>
                    <div class="col-lg-10">
                        <textarea id="Files" name="Files" placeholder="Paste each audio file on a new line, in the order you want to listen to them in.">
                            @foreach (var file in Model.Files)
                            {
                                @(file + Environment.NewLine)
                            }</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="ImgUrl" class="col-lg-2 control-label">Artwork</label>
                    <div class="col-lg-10">
                        <input type="url" id="ImgUrl" name="ImgUrl" placeholder="An image on the web." value="@Model.ImgUrl" />
                        <div id="imgPreview"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="FeedName" class="col-lg-2 control-label">Feed Name</label>
                    <div class="col-lg-10">
                        <input type="text" name="FeedName" id="FeedName" placeholder="Name this feed. If blank, we'll use your local date/time." value="@Model.FeedName" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button class="btn btn-primary">Build My Feed</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
    @if (Model.FeedToken.HasValue())
    {
        <div class="col-md-6">
            <div class="well">
                <h3>Your RSS Feed Is At</h3>
                <h4><a href="@Model.FeedUri.AbsoluteUri" id="newFeedUrl">@Model.FeedUri.AbsoluteUri</a></h4>
            </div>
            <div class="well">
                <h4>Email or Text/SMS It To Me</h4>
                It's handy to just text it to your phone for easy copy/paste into your podcast client.
                <input type="email" id="sendItToDetails" placeholder="your email or phone number" />
                <button class="btn btn-primary" id="sendLinkButton">Send It To Me</button>
                <div id="sendSuccess" class="alert alert-dismissable alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <span id="sendMsgSuccess"><strong>Sent!</strong> It'll arrive shortly.</span>
                    <span id="sendMsgWarning"><strong>Uh, oops.</strong> Something didn't work out.</span>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts{
    <script>
        $(function () {

            $("#UserBrowserDateTime").val(new Date());
            $("#sendSuccess").hide();
            $("#sendLinkButton").click(function () {
                $("#sendSuccess").hide();
                var dataPost = { feedToken: '@Model.FeedToken', sendTo: $("#sendItToDetails").val() };
                jQuery.ajax({
                    type: "POST",
                    url: '@Url.RouteUrl("SendNotification")',
                    data: dataPost,
                    dataType: "json",
                    success: function (data) {
                      
                        if (data == false) {
                            $("#sendMsgSuccess").hide();
                            $("#sendMsgWarning").show();
                            $("#sendSuccess").addClass("alert-warning");
                            $("#sendSuccess").removeClass("alert-success");
                        }
                        else {
                            $("#sendMsgSuccess").show();
                            $("#sendMsgWarning").hide();
                            $("#sendSuccess").addClass("alert-success");
                            $("#sendSuccess").removeClass("alert-warning");
                        }
                         
                        $("#sendSuccess").slideDown("fast");
                    }
                });
            });
        });

        $(function () {
            $(".deleteFeedLink").click(function () {
                var feedTokenToDel = $(this).attr("id");
                var dataPost = { feedToken: feedTokenToDel };
                jQuery.ajax({
                    type: "POST",
                    url: '@Url.RouteUrl("DeleteFeed")',
                    data: dataPost,
                    dataType: "json",
                    success: function (data) {

                    }
                });
            });
        });
    </script>
}
